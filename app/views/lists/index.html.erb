<div class="banner">
  <%= image_tag "cinema.jpeg", alt: "cinema", width: '100%', height: 550%>
    <p><span data-controller="typed-js"></span></p>
</div>


<div class="container">
  <h1>My lists</h1>
  <div class="row">

    <div class="col-8">
      <div class="flex-container">
        <% @lists.each do |list| %>

        <div class="card-category">
          <%= link_to list.name.capitalize, list_path(list) %>
          <div class="new-bookmark">
            <%= link_to "New bookmark", new_list_bookmark_path(list) %>
          </div>
        </div>
        <% end %>
      </div>
    </div>

    <div class="col-4">
      <div class="col text-center">
        <%= link_to "Create a movie list", new_list_bookmark_path(1), class: "btn btn-success mx-auto text-white" %>
      </div>
    </div>

  </div>


</div>
